{
  "compilerOptions": {
    "strict": true,
    "module": "Node16",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node16",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom" // required to use dependency papaparse
    ],
    "sourceMap": true,
    "outDir": "build",
    "allowJs": true
  },
  "include": ["index.ts", "src/*.ts"],
  "exclude": ["build"]
}
